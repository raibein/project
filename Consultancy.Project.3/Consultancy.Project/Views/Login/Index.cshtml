@model Consultancy.Project.ViewModel.Login

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@Html.ValidationSummary() <!-- This is used for the display any other error messages except validation error messages of UserName and Password -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() //This used for using own form where the token is automatically generated in hidden form
    <div class="form-group">
        @Html.LabelFor(a=>a.UserName)
        @Html.TextBoxFor(a=>a.UserName, new { @class="form-control" })
        @Html.ValidationMessageFor(a=>a.UserName) <!-- This is used for the display validation error message of UserName field -->
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Password)
        @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Password) <!-- This is used for the display validation error message of Password field -->
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
}